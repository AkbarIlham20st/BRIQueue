<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Favicon -->
  <link rel="icon" href="/images/briTAB.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/images/briTAB.ico" type="image/x-icon">
  
  <!-- Untuk browser modern -->
  <link rel="icon" type="image/png" sizes="32x32" href="/images/briTAB-32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/briTAB-16.png">
  
  <!-- Untuk Apple devices -->
  <link rel="apple-touch-icon" sizes="180x180" href="/images/briTAB.png">
  <title>Display Antrian</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="display-container">
    <!-- Header Section -->
    <header class="display-header">
      <div class="bank-logo">
        <img src="/images/logoBRI.png" alt="Bank Logo">
      </div>
      <div class="bank-info">
        <h1>BANK QUEUE SYSTEM</h1>
        <div class="current-time" id="current-time"></div>
      </div>
    </header>
    
    <!-- Main Content -->
    <div class="display-main">
      <!-- Left Side: Queue Information -->
      <div class="queue-section">
        <h2>Antrian Saat Ini</h2>
        <div class="active-queues" id="active-queues">
          <!-- Queues will be populated by JavaScript -->
        </div>
      </div>
      
      <!-- Right Side: Media Content -->
      <div class="media-section">
        <!-- Video Player -->
        <div class="video-player">
          <div id="video-container"></div>
        </div>
        
        <!-- Currency Rates -->
        <div class="currency-rates">
          <h3>Kurs Mata Uang</h3>
          <table id="currency-table">
            <thead>
              <tr>
                <th>Mata Uang</th>
                <th>Beli</th>
                <th>Jual</th>
              </tr>
            </thead>
            <tbody>
              <!-- Rates will be populated by JavaScript -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <!-- Footer: Information Text -->
    <footer class="info-footer">
      <div class="info-text" id="info-text">
        <!-- Information text will be populated by JavaScript -->
      </div>
    </footer>
  </div>

  <script src="/js/display.js"></script>
</body>
</html>