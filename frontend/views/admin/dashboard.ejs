<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <header class="admin-header">
    <h1>Admin Dashboard</h1>
    <a href="/admin/logout" class="logout-btn">Logout</a>
  </header>

  <nav class="sidebar">
    <ul>
      <li><a href="#dashboard" class="active">Dashboard</a></li>
      <li><a href="#videos">Manage Videos</a></li>
      <li><a href="#queues">Manage Queues</a></li>
      <li><a href="#settings">Settings</a></li>
    </ul>
  </nav>

  <!-- dashboard -->
  <main class="content">
    <section id="dashboard">
      <h2>System Overview</h2>
      <div class="stats">
        <div class="stat-card">
          <h3>Active Queues</h3>
          <p id="queue-count">0</p>
        </div>
        <div class="stat-card">
          <h3>Videos</h3>
          <p id="video-count">0</p>
        </div>
      </div>
    </section>

    <!-- manage videos -->
    <section id="videos" style="display:none;">
      <h2>Video Management</h2>
      <div class="video-upload">
        <input type="file" id="video-upload" accept="video/mp4">
        <button id="upload-btn">Upload Video</button>
      </div>
      <div id="video-list"></div>
    </section>

    <!-- manage queues -->
    <section id="queues" style="display:none;">
      <h2>Queue Management</h2>
      <div class="queue-actions">
        <button id="reset-queues-btn" class="btn-danger">Reset All Queues</button>
      </div>
      
      <div class="queue-container">
        <h3>Active Queues</h3>
        <div id="active-queues-list">
          <!-- Daftar antrian aktif akan dimuat di sini -->
        </div>
        
        <h3>Queue History</h3>
        <div id="all-queues-list">
          <!-- Daftar semua antrian akan dimuat di sini -->
        </div>
      </div>
    </section>

      <!-- settings -->
    <section id="settings" style="display:none;"></section>
  </main>


   


  <script src="/js/admin.js"></script>
</body>
</html>