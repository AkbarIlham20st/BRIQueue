<!-- frontend/views/admin/error.ejs -->
<%- include('./partials/header', {title: typeof title !== 'undefined' ? title : 'Error - Bank Queue System'}) %>
<%- include('./partials/sidebar', {currentPage: ''}) %>

<div class="main-content">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-header bg-danger text-white">
                        <h3>Error</h3>
                    </div>
                    <div class="card-body">
                        <i class="fas fa-exclamation-triangle fa-5x text-danger mb-3"></i>
                        <h4 class="card-title">Terjadi Kesalahan</h4>
                        <p class="card-text"><%= typeof message !== 'undefined' ? message : 'Terjadi kesalahan yang tidak diketahui' %></p>
                        <a href="/admin/dashboard" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Kembali ke Dashboard
                        </a>
                        <a href="/admin/login" class="btn btn-secondary ms-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Login Kembali
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>